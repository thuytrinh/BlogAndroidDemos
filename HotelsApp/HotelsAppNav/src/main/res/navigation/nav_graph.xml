<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph.xml"
  app:startDestination="@id/hotelListFragment">
  <fragment
    android:id="@+id/hotelListFragment"
    android:name="thuytrinh.hotelsapp.HotelListFragment"
    tools:layout="@layout/hotel_list">
    <action
      android:id="@+id/fromHotelListToHotelDetails"
      app:destination="@id/hotelDetailsFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim" />
  </fragment>
  <fragment
    android:id="@+id/hotelDetailsFragment"
    android:name="thuytrinh.hotelsapp.HotelDetailsFragment"
    tools:layout="@layout/hotel_details">
    <action
      android:id="@+id/fromHotelDetailsToHotelBooking"
      app:destination="@id/hotelBookingFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim" />
  </fragment>
  <fragment
    android:id="@+id/hotelBookingFragment"
    android:name="thuytrinh.hotelsapp.HotelBookingFragment"
    tools:layout="@layout/hotel_booking" />
</navigation>
